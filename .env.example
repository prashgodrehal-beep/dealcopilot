# ============================================================
# DealPilot — Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git
# ============================================================

# Supabase (get these from: supabase.com → Project → Settings → API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Anthropic API (for coaching engine — used in Stage 4)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Razorpay (for credit purchases — used in Stage 6)
RAZORPAY_KEY_ID=rzp_test_your-key
RAZORPAY_KEY_SECRET=your-secret

# Calendly (for escalation — used in Stage 7)
NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/your-link

NEXT_PUBLIC_ADMIN_EMAIL=prashanth@growthaspire.com

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
